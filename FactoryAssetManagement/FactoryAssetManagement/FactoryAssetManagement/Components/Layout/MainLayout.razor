@using Microsoft.AspNetCore.Components.Authorization
@using MudBlazor

@inherits LayoutComponentBase

@* Required *@
<MudThemeProvider />
<MudPopoverProvider />

@* Needed for dialogs *@
<MudDialogProvider />

@* Needed for snackbars *@
<MudSnackbarProvider />

<AuthorizeView>
    <Authorized>
        <div class="page">
            <div class="sidebar">
                <NavMenu />
            </div>

            <main>
                <article class="content px-4">
                    <a href="https://localhost:5224/account/logout">Logout</a>
                    @Body
                </article>
            </main>
        </div>
    </Authorized>
    <NotAuthorized >
        <FactoryAssetManagement.Client.Pages.Login.Login />
    </NotAuthorized>
</AuthorizeView>



<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>
